<div class=" container ">

  <div class=" row ">
    <div class=" col ">
      <h1>Dashboard</h1>
      <hr></hr>
    </div>
  </div>

  <div class=" row ">
    <div class=" col ">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>Ohhh Shit! </strong> <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <div class=" row ">
    <div class=" col ">
      <div class=" row ">
        <div class=" col ">
          <h2>Summary</h2>
        </div>
      </div>
      <div class=" row ">
        <div class=" col-6 col-md-3 ">
          <strong>Amount Invested: </strong>
        </div>
        <div class=" col-6 col-md-2 text-right ">
          <%= "$#{'%.2f' % @investment}" %>
        </div>
      </div>
      <div class=" row ">
        <div class=" col-6 col-md-3 ">
          <strong>Current Total: </strong>
        </div>
        <div class=" col-6 col-md-2 text-right ">
          <%= "$#{'%.2f' % @assets["total"]}" %>
        </div>
      </div>
      <div class=" row ">
        <div class=" col-6 col-md-3 ">
          <strong>Profit: </strong>
        </div>
        <div class=" col-6 col-md-2 text-right ">
          <% profit = @assets["total"]-@investment %>
          <% if profit >= 0 %>
            <%= "$#{'%.2f' % profit}" %>
          <% else %>
            <%= "-$#{'%.2f' % (profit*-1)}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class=" row mt-3 ">
    <div class=" col ">
      <h2>Current Investments</h2>
    </div>
  </div>

  <div class=" row ">
    <div class=" col ">
      <table class=" table ">
        <tr>
          <th class=" text-center ">Coin</th>
          <th class=" text-center ">Ticker</th>
          <th class=" text-center ">Assets</th>
          <th class=" text-center ">Balance</th>
        </tr>

        <% @symbols.each do |key, symbol| %>
          <% asset = @assets[symbol["baseAsset"]] %>
          <% if asset["usd"].to_f > 5.0  %>
            <tr>
              <td class=" text-center "><%= symbol["baseAsset"] %></td>
              <td class=" text-right "><%= "#{'%.8f' % symbol["price"]}" %></td>
              <td class=" text-right "><%= "#{'%.8f' % asset["amount"]}" %></td>
              <td class=" text-right "><%= "$#{'%.2f' % asset["usd"]}" %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>
