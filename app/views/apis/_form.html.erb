<%= form_with model: @api, local: true do |form| %>

  <div class=" row ">
    <div class=" col ">
      <% if @api.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@api.errors.count, "error") %> prohibited this article from being saved:
          </h2>
          <ul>
            <% @api.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class=" row ">
    <div class=" col ">
      <table class=" table ">
        <tr>
          <th width="10%">
            <%= form.label :name %>
          </th>
          <td>
            <%= form.text_field :name, :class => "form-control" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= form.label :api_type %>
          </th>
          <td>
            <%= form.text_field :api_type, :class => "form-control" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= form.label :api_key %>
          </th>
          <td>
            <%= form.text_field :api_key, :class => "form-control" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= form.label :secret_key %>
          </th>
          <td>
            <%= form.text_field :secret_key, :class => "form-control" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td class=" text-right ">
            <%= form.submit :Submit, :class => "btn btn-primary" %>
            <%= link_to 'Cancel', apis_path, :class => "btn btn-danger" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>
