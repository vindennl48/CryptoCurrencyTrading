<%= form_with model: @api, local: true do |form| %>

  <% if @api.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@api.errors.count, "error") %> prohibited this article from being saved:
      </h2>
      <ul>
        <% @api.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <th>
        <%= form.label :name %>
      </th>
      <td>
        <%= form.text_field :name %><br>
      </td>
    </tr>
    <tr>
      <th>
        <%= form.label :api_type %>
      </th>
      <td>
        <%= form.text_field :api_type %>
      </td>
    </tr>
    <tr>
      <th>
        <%= form.label :api_key %>
      </th>
      <td>
        <%= form.text_field :api_key %>
      </td>
    </tr>
    <tr>
      <th>
        <%= form.label :secret_key %>
      </th>
      <td>
        <%= form.text_field :secret_key %>
      </td>
    </tr>
    <tr>
      <td>
        <%= form.submit %>
      </td>
    </tr>
  </table>
<% end %>
