<%= render './navbar', page: "investments" %>

<div class=" container ">

  <div class=" row ">
    <div class=" col ">
      <h1>Investments</h1>
    </div>
  </div>

  <div class=" row ">
    <div class=" col ">
      <table class=" table text-center ">
        <thead>
          <tr>
            <th>Date</th>
            <th>Amount</th>
            <th width="25%"></th>
          </tr>
        </thead>

        <tbody>
          <% @transactions.each do |transaction| %>
            <tr>
              <td><%= transaction.date %></td>
              <td><%= "$#{'%.2f' % transaction.amount}" %></td>
              <td>
                <%= link_to 'Edit', edit_transaction_path(transaction) %>, 
                <%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
          <tr>
            <td></td>
            <td></td>
            <td>
              <%= link_to '+ New Transaction', new_transaction_path, :class => "btn btn-primary" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>

<br>

